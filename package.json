{
  "name": "gitodo",
  "displayName": "GiToDo",
  "repository": {
    "type": "git",
    "url": "https://github.com/markusa380/gitodo"
  },
  "description": "Show a list of all uncommitted TODOs",
  "publisher": "markusa380",
  "author": {
    "name": "Markus A.",
    "email": "markusappel@hotmail.de"
  },
  "icon": "media/icon.png",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "todo",
    "uncommitted"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "gitodo",
          "name": "uncommitted TODOs",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "format": "npx prettier --write .",
    "lint": "eslint src --ext ts",
    "ci": "npm ci && npm run format && npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "prettier": "2.8.4",
    "typescript": "^4.9.4"
  }
}
